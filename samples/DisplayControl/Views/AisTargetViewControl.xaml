<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:DisplayControl.ViewModels;assembly=DisplayControl"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="850" d:DesignHeight="450"
             x:Class="DisplayControl.Views.AisTargetViewControl">
    <Design.DataContext>
        <vm:AisTargetViewModel/>
    </Design.DataContext>
    <StackPanel Orientation="Horizontal" Margin="5">
        <Border Background="{Binding StatusColor}">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock VerticalAlignment="Center" Text="{Binding NameOrMmsi}" Width="150"/>
                <TextBlock VerticalAlignment="Center" Text="{Binding Mmsi}" Width="90"/>
            </StackPanel>
        </Border>
     </StackPanel>
</UserControl>
