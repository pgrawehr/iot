<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>DisplayControl</RootNamespace>
    <Nullable>warnings</Nullable>
    <!--We don't want package references, but individual project references-->
    <PreferPackageReference>true</PreferPackageReference>
  </PropertyGroup>
<ItemGroup>
    <Folder Include="Models\" />
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>
<ItemGroup>
  <AvaloniaResource Remove="Views\SensorValueControl.xaml" />
</ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.10.6" />
    <PackageReference Include="Avalonia.Desktop" Version="0.10.6" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.10.6" />
    <PackageReference Include="System.IO.Ports" Version="5.0.1" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\SensorValueControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\src\devices\Ads1115\Ads1115.csproj" />
    <ProjectReference Include="..\..\src\devices\Arduino\Arduino.csproj" />
    <ProjectReference Include="..\..\src\devices\Bmxx80\Bmxx80.csproj" />
    <ProjectReference Include="..\..\src\devices\Common\CommonHelpers.csproj" />
    <ProjectReference Include="..\..\src\devices\CpuTemperature\CpuTemperature.csproj" />
    <ProjectReference Include="..\..\src\devices\Dhtxx\Dhtxx.csproj" />
    <ProjectReference Include="..\..\src\devices\IG-500A\IG-500A.csproj" />
    <ProjectReference Include="..\..\src\devices\Nmea0183\Nmea0183.csproj" />
    <ProjectReference Include="..\..\src\devices\CharacterLcd\CharacterLcd.csproj" />
    <ProjectReference Include="..\..\src\devices\Mcp23xxx\Mcp23xxx.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Update="Calibration_Cirrus.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Calibration_Cirrus_v3.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="DisplayControl.sh">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
